{
  "name": "ingridient-api",
  "type": "commonjs",
  "version": "1.0.0",
  "description": "Ingridient REST API",
  "main": "dist/main.js",
  "repository": "https://github.com/maulanasdqn/ingridient-api.git",
  "author": "Maulana Sodiqin",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register src/main.ts",
    "prod": "node ./dist/main.js",
    "test": "jest",
    "lint": "eslint --fix ./src/**/*.ts",
    "seed": "ts-node ./drizzle/seed.ts",
    "gen": "drizzle-kit generate:pg --config ./src/drizzle/config.ts",
    "migrate": "drizzle-kit push:pg --config ./src/drizzle/config.ts",
    "build": "tsc && tsc-alias"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.4",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.3",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
